@model IEnumerable<Sudo.Models.Event>

@{
    ViewData["Title"] = "Index";
    List<Sudo.Models.Event> Jan = new List<Sudo.Models.Event>();
    List<Sudo.Models.Event> Feb = new List<Sudo.Models.Event>();
    List<Sudo.Models.Event> Mar = new List<Sudo.Models.Event>();
    List<Sudo.Models.Event> Apr = new List<Sudo.Models.Event>();
    List<Sudo.Models.Event> Other = new List<Sudo.Models.Event>();

}
@foreach (var item in Model)
{
    @if (item.Time.Month == 1)
    {
        Jan.Add(item);
    }
    @if (item.Time.Month == 2)
    {
        Feb.Add(item);
    }
    @if (item.Time.Month == 3)
    {
        Mar.Add(item);
    }
    @if (item.Time.Month == 4)
    {
        Apr.Add(item);
    }
    @if (item.Time.Month > 4)
    {
        Other.Add(item);
    }
}

